<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deposit"
    android:orientation="vertical"
    android:background="@drawable/mainbkg">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="420dp"
           android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/purple_200"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bloggersans"
                android:text="Sender Number" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/bloggersans2"
                android:background="@drawable/edittext_bkg"
                android:drawablePadding="8dp"
                android:hint="Phone"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/bloggersans"
                android:text="Bkash:-01643894554"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/bloggersans2"
                android:text="Personal Payment Number(Sand Money Only)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bloggersans"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="180dp"
                android:text="Amount" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/bloggersans2"
                android:background="@drawable/edittext_bkg"
                android:drawablePadding="8dp"
                android:hint="Amount"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/bloggersans"
                android:layout_marginTop="260dp"
                android:text="Trans ID" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="280dp"
                android:fontFamily="@font/bloggersans2"
                android:background="@drawable/edittext_bkg"
                android:drawablePadding="8dp"
                android:hint="Trans id"
                android:padding="8dp" />

            <Button
                android:id="@+id/deposit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:fontFamily="@font/bloggersans"
                android:layout_marginTop="350dp"
                android:background="@drawable/cards"
                android:gravity="center"
                android:text="Request Reposit" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

